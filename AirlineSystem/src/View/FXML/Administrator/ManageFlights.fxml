<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Controller">
    <TableView fx:id="flightsTable" layoutX="297.0" prefHeight="400.0" prefWidth="472.0">
        <columns>
            <TableColumn fx:id="flightNumber" prefWidth="127.0" text="Flight Number" />
            <TableColumn fx:id="departureTime" prefWidth="57.0" text="Departure Time" />
            <TableColumn fx:id="arrivalTime" prefWidth="42.0" text="Arrival Time" />
            <TableColumn fx:id="departurePlace" prefWidth="96.0" text="Departure place" />
            <TableColumn fx:id="arrivalPlace" prefWidth="96.0" text="Arrival place" />
            <TableColumn fx:id="planeNumber" prefWidth="96.0" text="plane number" />
            <TableColumn fx:id="crew" prefWidth="96.0" text="Crew" />
            <TableColumn fx:id="passengers" prefWidth="199.0" text="passengers" />
            <TableColumn fx:id="status" prefWidth="96.0" text="Status" />
        </columns>
    </TableView>
    <Button cancelButton="true" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#ManageFlightsGoBack" text="&lt;" />
    <Button layoutX="13.0" layoutY="67.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="262.0" onAction="#addFlightButtonPressed" text="Add Flight" />
    <Button fx:id="removeButton" layoutX="14.0" layoutY="156.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="262.0" onAction="#removeFlightButtonPressed" visible="false" text="Remove Flight" />
    <TextField layoutX="14.0" layoutY="112.0" prefHeight="31.0" prefWidth="262.0" promptText="Search Flights" />
</AnchorPane>
