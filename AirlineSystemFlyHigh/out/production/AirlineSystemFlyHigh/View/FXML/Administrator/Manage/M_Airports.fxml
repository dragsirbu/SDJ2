<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Manage.M_Airports">
    <TableView fx:id="airportsTable" layoutX="194.0" onMouseClicked="#removeButtonAppear" prefHeight="400.0" prefWidth="526.0">
        <columns>
            <TableColumn fx:id="code" prefWidth="56.0" text="Code" />
            <TableColumn fx:id="name" text="Name" />
            <TableColumn fx:id="city" prefWidth="74.0" text="City" />
            <TableColumn fx:id="postcode" prefWidth="89.0" text="Postcode" />
            <TableColumn fx:id="country" prefWidth="76.0" text="Country" />
            <TableColumn fx:id="numberOfGates" prefWidth="141.0" text="Number Of Gates" />
        </columns>
    </TableView>
    <Button cancelButton="true" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#ManageAirportsGoBack" text="&lt;" />
    <Button layoutX="13.0" layoutY="67.0" mnemonicParsing="false" onAction="#addAirportButtonPressed" prefHeight="31.0" prefWidth="172.0" text="Add Airport" />
    <Button fx:id="removeButton" layoutX="13.0" layoutY="200.0" mnemonicParsing="false" onAction="#removeAirportButtonPressed" prefHeight="31.0" prefWidth="172.0" text="Remove airport" visible="false" />
    <TextField fx:id="searchField" layoutX="13.0" layoutY="109.0" prefHeight="31.0" prefWidth="172.0" promptText="Search airports" />

    <Button fx:id="confirm" layoutX="15.0" layoutY="271.0" mnemonicParsing="false" onAction="#confirmButtonPressed" prefWidth="80.0" text="Confirm" visible="false"/>
    <Button fx:id="forsake" layoutX="104.0" layoutY="271.0" mnemonicParsing="false" onAction="#forsakeButtonPressed" prefHeight="31.0" prefWidth="80.0" text="Forsake" visible="false" />
    <Label fx:id="confirmationLabel" layoutX="53.0" layoutY="238.0" text="Are you sure?" visible="false" />
   <Button fx:id="editButton" layoutX="13.0" layoutY="154.0" mnemonicParsing="false" onAction="#editButtonPressed" prefHeight="31.0" prefWidth="172.0" text="Edit" visible="false" />

</AnchorPane>
