<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainController">

    <children>
        <Label contentDisplay="CENTER" layoutX="247.0" layoutY="87.0" text="Log in" textAlignment="CENTER">
            <font>
                <Font size="39.0" />
            </font>
        </Label>
        <Label layoutX="168.0" layoutY="158.0" text="Username:">
            <font>
                <Font size="20.0" />
            </font></Label>
        <Label layoutX="168.0" layoutY="209.0" text="Password:">
            <font>
                <Font size="20.0" />
            </font></Label>

        <TextField fx:id="username" layoutX="281.0" layoutY="158.0" />
        <PasswordField fx:id="password" layoutX="281.0" layoutY="209.0" />
        <Button fx:id="logIn" layoutX="168.0" layoutY="258.0" mnemonicParsing="false" onAction="#LogInButtonController" prefHeight="40.0" prefWidth="150.0" text="Log in">
            <font>
                <Font size="17.0" />
            </font>
        </Button>
        <Button fx:id="register" layoutX="320.0" layoutY="258.0" mnemonicParsing="false" onAction="#RegisterButtonController" prefHeight="40.0" prefWidth="150.0" text="Register">
            <font>
                <Font size="17.0" />
            </font>
        </Button>
        <Button fx:id="skip" layoutX="470.0" layoutY="348.0" mnemonicParsing="false" onAction="#SkipButtonController" prefHeight="19.0" prefWidth="112.0" text="Skip">
            <font>
                <Font size="17.0" />
            </font>
        </Button>
        <Label fx:id="wrongDataLabel" layoutX="175.0" layoutY="306.0" text="Wrong username or password!" visible="false" textFill="RED">
            <font>
                <Font size="21.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
